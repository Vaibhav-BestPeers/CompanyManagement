<h1> Welcome to Chatting </h1>

<h2 style="color:Yellow;">
<% if @user.picture != nil %>
  <% if @user.picture.image.attached? %>
    <td><%= image_tag  @user.picture.image , style: "width: 120px; height: 120px; outline-style: dashed; display: block" %></td>        
  <% end %>
<% end %>
==> <%= @user.name %> <==
</h2>



<h1>Chat with </h1>
<table style="width:100%">
  <tr class="header">
    <th>#</th>
    <th> User Type </th>
    <th> User ID </th>
    <th> User Name </th>
    <th> Chat </th>
    <br><br>
  </tr>

  <% @user_all.each do |user_all|%>
  <tr>

    <% if user_all.picture != nil %>
       <% if user_all.picture.image.attached? %>
           <td><%= image_tag  user_all.picture.image , style: "width: 120px; height: 120px; outline-style: dashed; display: block" %></td>        
        <% end %>
    <% else %>
        <td>Not Available</td>
    <% end %>
    <td><%= user_all.type %></td>
    <td><%= user_all.id %></td>
    <td><%= user_all.name %></td>
    <td> <%= button_to '==> Chat <==', userr_chatting_path(@user.id,user_all.id), method: :get %> </td>

    <br>
  </tr>
  <%end%>
</table>






